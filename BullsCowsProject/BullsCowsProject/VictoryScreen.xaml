<Window x:Class="BullsCowsProject.VictoryScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BullsCowsProject"
        mc:Ignorable="d"
        Title="You won!" Height="151.579" Width="363.369" ResizeMode="NoResize" Icon="Resources/icon.png" ShowInTaskbar="False" BorderBrush="Black">
    <Grid Background="#FF20C5CD">
        <Label x:Name="label" Content="Victory" HorizontalAlignment="Left" Margin="15,14,0,0" VerticalAlignment="Top" FontSize="48" FontFamily="SketchFlow Print" FontWeight="Bold"/>
        <Button x:Name="newGameButton" Content="New Game" HorizontalAlignment="Left" Margin="16,0,0,20" Width="85" Click="newGameButton_Click" FontFamily="ScetchFlow Print" FontWeight="Medium" FontSize="12" Background="#FFDA3728" Height="20" VerticalAlignment="Bottom"/>
        <Button x:Name="exitButton" Content="Exit" HorizontalAlignment="Left" Margin="113,0,0,20" Width="85" Click="exitButton_Click" FontFamily="ScetchFlow Print" FontWeight="Medium" FontSize="12" Background="#FFDA3728" Height="20" VerticalAlignment="Bottom"/>
        <Image x:Name="MedalImage" HorizontalAlignment="Left" Margin="231,14,0,20" Width="100"/>

    </Grid>
</Window>
